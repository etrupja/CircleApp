@model List<Post>



<main id="site__main" class="2xl:ml-[--w-side]  xl:ml-[--w-side-sm] p-2.5 h-[calc(100vh-var(--m-top))] mt-[--m-top]">


        <div class="w-full bg-white shadow my-2 lg:flex gap-12 2xl:gap-16 max-w-[1065px] mx-auto">
            <!-- cover -->
            <div class="relative overflow-hidden lg:h-8 h-8"></div>

            <!-- user info -->
            <div class="p-3 flex flex-row items-center">
                <!-- Image container -->
                <div class="flex-shrink-0 mr-4">
                    <div class="relative lg:h-28 lg:w-28 w-28 h-28">
                        <div class="relative overflow-hidden rounded-full md:border-[6px] border-gray-100 shrink-0 dark:border-slate-900 shadow">
                            <img src="~/images/avatar/user.png" alt="" class="h-full w-full object-cover">
                        </div>
                    </div>
                </div>

                <!-- Text content container -->
                <div>
                    <h3 class="md:text-3xl text-base font-bold text-black dark:text-white"> Ervis Trupja </h3>
                    <p class="mt-2 text-gray-500 dark:text-white/80"> ervistrupja@email.com </p>
                </div>

            </div>
        </div>

        <div class="lg:flex 2xl:gap-16 gap-12 max-w-[1065px] mx-auto" id="js-oversized">
            <div class="max-w-[680px] mx-auto">

                <div class="md:max-w-[580px] mx-auto flex-1 xl:space-y-6 space-y-3">

                    @if (Model.Count == 0)
                    {
                        <div class="bg-white rounded-xl shadow-sm md:p-4 p-2 space-y-4 text-sm font-medium border1" style="width: 580px;">
                            You have not posted anything
                        </div>
                    }
                    else
                    {
                        @foreach (var post in Model)
                        {
                            <partial name="Home/_Post" model="post" view-data='new ViewDataDictionary(ViewData) { { "ShowAllComments", false } }' />
                        }
                    }
                </div>
            </div>
            <div class="flex-1">
                <div class="lg:space-y-4 lg:pb-8 max-lg:grid sm:grid-cols-2 max-lg:gap-6">
                    <div class="box p-5 px-6">
                        <partial name="Sidebar/_UserFriends" />
                    </div>
                </div>
            </div>
        </div>
</main>